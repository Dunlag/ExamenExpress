<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <h1 class="text-center">Mapa Interactivo</h1>
        <div id="map"></div>
    </div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Iniciar el mapa centrado en Málaga
            var map = L.map('map').setView([36.7213, -4.4214], 13);

            // Capa base de OpenStreetMap
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            // Intentar obtener la ubicación del usuario
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var userLat = position.coords.latitude;
                    var userLng = position.coords.longitude;

                    L.marker([userLat, userLng]).addTo(map)
                        .bindPopup("¡Estás aquí!").openPopup();

                    map.setView([userLat, userLng], 14);
                });
            }

            // Cargar puntos de interés desde el JSON
            fetch('/api/puntos')
                .then(response => response.json())
                .then(data => {
                    data.forEach(punto => {
                        L.marker([punto.lat, punto.lng]).addTo(map)
                            .bindPopup(`<b>${punto.nombre}</b><br>${punto.descripcion}`);
                    });
                })
                .catch(error => console.error("Error cargando puntos de interés:", error));
        });
    </script>
</body>
</html>
